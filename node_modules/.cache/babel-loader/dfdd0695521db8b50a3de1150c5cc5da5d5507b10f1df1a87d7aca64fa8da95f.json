{"ast":null,"code":"export default {\n  name: \"EventId\",\n  props: [\"id\"],\n  data: function () {\n    return {\n      lista: null\n    };\n  },\n  mounted() {\n    fetch(\"http://127.0.0.1:8000/api/noticia/\" + this.$route.params.id).then(response => response.json()).then(data => this.lista = data).catch(err => console.log(err.message));\n  },\n  computed: {\n    conteudoComQuebraDeLinha() {\n      // substitua todas as quebras de linha por <br>\n      return this.conteudo.replace(/\\n/g, '<br>');\n    }\n  }\n};","map":{"version":3,"mappings":"AAmDA,eAAe;EACbA,IAAI,EAAE,SAAS;EACfC,KAAK,EAAE,CAAC,IAAI,CAAC;EAEbC,IAAI,EAAE,YAAY;IAChB,OAAO;MACLC,KAAK,EAAE;IACT,CAAC;EACH,CAAC;EAEDC,OAAO,GAAG;IACRC,KAAK,CAAC,oCAAmC,GAAI,IAAI,CAACC,MAAM,CAACC,MAAM,CAACC,EAAE,EAC/DC,IAAI,CAAEC,QAAQ,IAAKA,QAAQ,CAACC,IAAI,EAAE,EAClCF,IAAI,CAAEP,IAAI,IAAM,IAAI,CAACC,KAAI,GAAID,IAAK,EAClCU,KAAK,CAAEC,GAAG,IAAKC,OAAO,CAACC,GAAG,CAACF,GAAG,CAACG,OAAO,CAAC,CAAC;EAC7C,CAAC;EACDC,QAAQ,EAAE;IACRC,wBAAwB,GAAG;MACzB;MACA,OAAO,IAAI,CAACC,QAAQ,CAACC,OAAO,CAAC,KAAK,EAAE,MAAM;IAC5C;EACF;AACF,CAAC","names":["name","props","data","lista","mounted","fetch","$route","params","id","then","response","json","catch","err","console","log","message","computed","conteudoComQuebraDeLinha","conteudo","replace"],"sourceRoot":"","sources":["/Users/jailsoncorreia/CNPDSYSTEM/SITECNPDFINAL/src/components/EventId.vue"],"sourcesContent":["<template>\n  <!-- ======= eventcoes Section ======= -->\n  <section id=\"lista\" class=\"lista\">\n    <div class=\"container\">\n      <div class=\"section-bredcumbs\">\n        <h5>\n          Onde estou?\n          <router-link style=\"text-decoration: none\" to=\"/\">\n            <b>Página Inicial</b>\n          </router-link>\n          <b> > </b>\n          <router-link style=\"text-decoration: none\" to=\"/noticias\">\n            <b>Notícias</b>\n          </router-link>\n          <b> > </b>\n          <router-link style=\"text-decoration: none\" to=\"#\">\n            <b v-if=\"lista\"> {{ lista.titulo }}</b>\n          </router-link>\n        </h5>\n      </div>\n      <div v-if=\"lista\">\n        <div class=\"section-title\">\n          <h2>{{ lista.titulo }}</h2>\n        </div>\n        <div class=\"row content\">\n          <div class=\"col-lg-4\">\n            <div class=\"post-img\">\n              <img\n              :src=\"'http://localhost:8000/storage/capanoticia/'+ lista.imagem \"\n                class=\"img-fluid\"\n                alt=\"\"\n                \n              />\n            </div>\n          </div>\n          <div class=\"col-lg-8\" id=\"descricao\">\n            <p class=\"date\">Publicado em: {{ lista.created_at }} </p>\n            \n              <div class=\"col-md-12\">\n                <p v-html=\"conteudoComQuebraDeLinha\">{{ lista.conteudo }} </p>  \n \n              </div> \n          </div>\n        </div>\n      </div>\n    </div>\n  </section>\n  <!-- End eventcoes Section -->\n</template>\n\n<script>\nexport default {\n  name: \"EventId\",\n  props: [\"id\"],\n\n  data: function () {\n    return {\n      lista: null,\n    };\n  },\n\n  mounted() {\n    fetch(\"http://127.0.0.1:8000/api/noticia/\" + this.$route.params.id)\n      .then((response) => response.json())\n      .then((data) => (this.lista = data))\n      .catch((err) => console.log(err.message));\n  },\n  computed: {\n    conteudoComQuebraDeLinha() {\n      // substitua todas as quebras de linha por <br>\n      return this.conteudo.replace(/\\n/g, '<br>')\n    }\n  },\n};\n</script>\n\n<style scoped>\n.lista {\n  padding-top: 100px;\n}\n\n.section-title {\n  text-align: center;\n  padding-bottom: 30px;\n}\n.section-title h2 {\n  font-size: 13px;\n  letter-spacing: 1px;\n  font-weight: 700;\n  padding: 8px 20px;\n  line-height: 1;\n  margin: 0;\n  background: #bd9a13;\n  color: #000;\n  display: inline-block;\n  text-transform: uppercase;\n  border-radius: 50px;\n}\n@media (min-width: 1024px) {\n  .section-title p {\n    width: 50%;\n  }\n}\n.post-img {\n  padding-top: 20px;\n  overflow: hidden;\n  margin: -30px -30px 15px -30px;\n  position: relative;\n  height: 500px;\n}\n\nimg {\n  border-radius: 10px;\n}\n#descricao {\n  text-align: justify;\n  padding-left: 50px;\n}\n.date {\n  font-size: 14px;\n  color: #013365;\n}\n</style>\n"]},"metadata":{},"sourceType":"module","externalDependencies":[]}